<%
template_root = "/var/www/ood/apps/templates/"
%>
---
attributes:
  desktop: "mate"
#  desktop: "xfce"
  bc_vnc_idle: 0
  bc_vnc_resolution:
    required: true
  node_type: null
  cluster:
    widget: select
    options:
      - redwood
<% IO.foreach(template_root+"bristlecones_v2") do |line| %>
<%= line %>
<% end %>    
<% IO.foreach(template_root+"cluster-help") do |line| %>
<%= line %>
<% end %>    
  custom_accpart:
    widget: select
    options:
      <%- CustomAccPart.accpart.each do |g| %>
      - "<%= g %>"
      <%- end %>
<% IO.foreach(template_root+"accpart-help") do |line| %>
<%= line %>
<% end %>    

<% IO.foreach(template_root+"job_params_v3.basic") do |line| %>
<%= line %>
<% end %>    

form:
  - cluster
  - bc_vnc_idle
  - custom_accpart
  - desktop
  - bc_num_hours
  - num_cores
  - node_type
  - bc_vnc_resolution
  - bc_email_on_started
